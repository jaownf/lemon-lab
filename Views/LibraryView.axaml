<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LemonLab.ViewModels"
             xmlns:models="using:LemonLab.Models"
             x:Class="LemonLab.Views.LibraryView"
             x:DataType="vm:LibraryViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header com busca e filtros -->
        <Border Grid.Row="0" Background="{DynamicResource CardBackground}" 
                Padding="20" Margin="0,0,0,16" CornerRadius="12">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText}"
                         Watermark="ðŸ” Buscar por tÃ­tulo, autor ou gÃªnero..."
                         Classes="search"/>
                
                <Button Grid.Column="1" Content="ðŸ”„ Atualizar" 
                        Command="{Binding RefreshCommand}"
                        Classes="secondary" Margin="12,0,0,0"/>
                
                <Button Grid.Column="2" Content="ðŸ“ Escanear Pasta" 
                        Classes="primary" Margin="12,0,0,0"/>
            </Grid>
        </Border>

        <!-- Filtros rÃ¡pidos -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Filtrar por:" VerticalAlignment="Center" 
                       Foreground="{DynamicResource TextSecondary}" FontWeight="Medium"/>
            <Button Content="Todos" Classes="filter-chip"/>
            <Button Content="Lendo" Classes="filter-chip"/>
            <Button Content="Completo" Classes="filter-chip"/>
            <Button Content="Pausado" Classes="filter-chip"/>
            <Button Content="Abandonado" Classes="filter-chip"/>
            <Button Content="Planejar Ler" Classes="filter-chip"/>
        </StackPanel>

        <!-- Lista de mangÃ¡s -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl ItemsSource="{Binding FilteredMangas}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:Manga">
                        <Border Background="{DynamicResource CardBackground}"
                                CornerRadius="12" Padding="16" Margin="0,0,16,16"
                                Width="280" Cursor="Hand"
                                Classes="manga-card">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <!-- Capa -->
                                <Border Grid.Row="0" Background="{DynamicResource AccentYellow}"
                                        Height="180" CornerRadius="8" Margin="0,0,0,12">
                                    <TextBlock Text="ðŸ“–" FontSize="64" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- TÃ­tulo -->
                                <TextBlock Grid.Row="1" Text="{Binding Title}" 
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Autor -->
                                <TextBlock Grid.Row="2" Text="{Binding Author}" 
                                           FontSize="13" 
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,8"/>
                                
                                <!-- Status e Rating -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8">
                                    <Border Background="{Binding StatusColor}" 
                                            CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="11" Foreground="White"
                                                   FontWeight="Medium"/>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource RatingBackground}" 
                                            CornerRadius="4" Padding="8,4"
                                            IsVisible="{Binding Rating, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="â­" FontSize="11"/>
                                            <TextBlock Text="{Binding RatingText}" 
                                                       FontSize="11" FontWeight="Bold"
                                                       Foreground="{DynamicResource TextPrimary}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Progresso -->
                                <StackPanel Grid.Row="4" Margin="0,8,0,0">
                                    <ProgressBar Value="{Binding Progress}" 
                                                 Maximum="100" Height="4"
                                                 Foreground="{DynamicResource AccentYellow}"/>
                                    <TextBlock Text="{Binding CurrentChapter, StringFormat='CapÃ­tulo {0}'}" 
                                               FontSize="11" 
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Estado vazio -->
        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="16"
                    IsVisible="{Binding !FilteredMangas.Count}">
            <TextBlock Text="ðŸ“š" FontSize="72" HorizontalAlignment="Center" Opacity="0.3"/>
            <TextBlock Text="Nenhum mangÃ¡ encontrado" 
                       FontSize="20" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondary}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Clique em 'Escanear Pasta' para adicionar mangÃ¡s" 
                       FontSize="14" 
                       Foreground="{DynamicResource TextTertiary}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</UserControl>
