<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:LemonLab"
        xmlns:views="using:LemonLab.Views"
        x:Class="LemonLab.MainWindow"
        Width="1400" Height="900"
        MinWidth="1000" MinHeight="700"
        Title="LemonLab - Manga Library Manager"
        TransparencyLevelHint="AcrylicBlur"
        x:DataType="local:MainViewModel">

    <Window.Styles>
        <!-- Estilos Globais -->
        <StyleInclude Source="/Styles/AppStyles.axaml"/>
    </Window.Styles>

    <Grid ColumnDefinitions="250,*">
        <!-- Menu Lateral -->
        <Border Grid.Column="0" Background="{DynamicResource SidebarBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Logo e Título -->
                <Border Grid.Row="0" Padding="24,32,24,24">
                    <StackPanel Spacing="16">
                        <Border Background="{DynamicResource AccentYellow}"
                                Width="60" Height="60" 
                                CornerRadius="16"
                                HorizontalAlignment="Center">
                            <TextBlock Text="🍋" 
                                       FontSize="32" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="LemonLab" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Manga Library" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Menu de Navegação -->
                <StackPanel Grid.Row="1" Spacing="8" Margin="16,0">
                    <Button Classes="menu-item" 
                            Classes.active="{Binding CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Biblioteca'}"
                            Command="{Binding NavigateToLibraryCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="📚" FontSize="20"/>
                            <TextBlock Text="Biblioteca" FontSize="15" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item"
                            Classes.active="{Binding CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Perfil'}"
                            Command="{Binding NavigateToProfileCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="👤" FontSize="20"/>
                            <TextBlock Text="Perfil" FontSize="15" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item"
                            Classes.active="{Binding CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Configurações'}"
                            Command="{Binding NavigateToSettingsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="⚙️" FontSize="20"/>
                            <TextBlock Text="Configurações" FontSize="15" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2" Padding="24,16" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="0,1,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock Text="v1.0.0" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextTertiary}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Made with 🍋" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextTertiary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Área de Conteúdo -->
        <Grid Grid.Column="1" Background="{DynamicResource AppBackground}">
            <ScrollViewer Padding="32">
                <ContentControl Content="{Binding CurrentView}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <Panel>
                                <!-- Library View -->
                                <views:LibraryView IsVisible="{Binding $parent[Window].DataContext.CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Biblioteca'}"/>
                                
                                <!-- Profile View -->
                                <views:ProfileView IsVisible="{Binding $parent[Window].DataContext.CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Perfil'}"/>
                                
                                <!-- Settings View -->
                                <views:SettingsView IsVisible="{Binding $parent[Window].DataContext.CurrentViewName, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter='Configurações'}"/>
                            </Panel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </ScrollViewer>
        </Grid>
    </Grid>

</Window>
